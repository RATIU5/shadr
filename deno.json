{
  "workspace": {
    "members": [
      "apps/playground",
      "apps/studio",
      "packages/common",
      "packages/editor/core",
      "packages/editor/events",
      "packages/editor/grid",
      "packages/editor/nodes",
      "packages/editor/renderer",
      "packages/editor/ui",
      "packages/renderer/core",
      "packages/renderer/webgl",
      "packages/renderer/webgpu"
    ]
  },
  "tasks": {
    "dev:playground": "cd apps/playground && deno task dev",
    "dev:studio": "cd apps/studio && deno task dev",
    "version": "deno run -A scripts/version.ts",
    "test": "deno test -A",
    "lint": "deno lint .",
    "fmt": "deno fmt ."
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react",
    "strict": true,
    "checkJs": true
  },
  "lint": {
    "include": ["apps/", "packages/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["apps/", "packages/"],
    "lineWidth": 90,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false
  }
}
