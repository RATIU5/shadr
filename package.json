{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"prepare": "effect-language-service patch",
		"dev:app": "pnpm --filter @shadr/app dev",
		"dev:packages": "pnpm --filter '@shadr/lib-*' dev",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"clean": "pnpm -r clean && rm -rf node_modules",
		"typecheck": "tsc -p app/tsconfig.json --noEmit && tsc -p packages/editor/tsconfig.json --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@effect/language-service": "^0.62.5",
		"@types/node": "^25.0.3",
		"typescript": "^5.9.3"
	},
	"workspaces": [
		"packages/*",
		"app"
	]
}
